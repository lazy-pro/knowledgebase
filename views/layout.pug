doctype html
html
  head
    title Knowledgebase
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-md.bg-dark
      a.navbar-brand(href='#') NodeKB
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a.nav-link(href='/')| Home 
          if user
            li
              a.nav-link(href='/articles/add') Add article
        ul.nav.navbar-nav.ml-auto
          if user 
            li
              a.nav-link(href="#") Hi #{user.name}
            li 
              a.nav-link(href='/users/logout') Logout
          else
            li
              a.nav-link(href='/users/register')| Register
            li
              a.nav-link(href='/users/login')| Login
    .container
      != messages('message',locals)  
      if errors
        each error ,i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      hr
      footer
        p Copyright &copy; 2018
    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
